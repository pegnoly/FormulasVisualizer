        <Button x:Name="_parseFormulaButton" Content="Button" Height="22" Canvas.Left="113" Canvas.Top="90" Width="170"/>
        <components:VariablesGrid x:Name="_variablesGrid" Height="527" Width="413" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <components:Plotter x:Name="_plotter" Height="320" Width="372" Canvas.Left="418" Canvas.Top="101" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</Window>
