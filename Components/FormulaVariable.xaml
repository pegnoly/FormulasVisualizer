<UserControl x:Class="FormulasVisualizer.Components.FormulaVariableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FormulasVisualizer.Components"
             mc:Ignorable="d" Height="143" Width="137">
    <Grid>
        <ComboBox x:Name="_valueSelector" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Height="25" Margin="0,84,0,0"/>
        <TextBox x:Name="_valueAdder" HorizontalAlignment="Left" Margin="10,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Height="30"/>
        <Button x:Name="_addValueButton" Content="Button" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top" Width="58" Click="AddPossibleValues"/>
        <Label x:Name="_variableNameLabel" Content="Label" HorizontalAlignment="Center" Height="29" VerticalAlignment="Top" Width="99" Margin="0,-5,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="_setSelectedButton" Content="Button" HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" Width="58" Click="SelectVariable"/>
    </Grid>
</UserControl>
